@inherits UmbracoTemplatePage<Home>
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <title>Edinburgh Umbraco Users Group | EDINBUUG</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.4.3/css/bulma.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .hero.is-primary {
            background-color: #00BEC1;
        }

        .meetup {
            border-top: 1px solid #fff;
            padding-top: 1em;
        }

        .social li {
            display: inline-block;
            margin: 1em .5em;
        }
    </style>
</head>
<body>
    <section class="hero is-primary is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="columns">
                    <div class="column is-half is-offset-one-quarter">
                        <h1 class="title is-2">
                            EDINBUUG
                        </h1>
                        <h2 class="subtitle is-3">
                            Edinburgh Umbraco Users Group
                        </h2>
                        @Html.CachedPartial("_Meetup", Model, 1800)
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-foot has-text-centered">
            <ul class="social">
                <li>
                    <a href="https://www.meetup.com/Edinburgh-Umbraco-Users-Group/">
                        <span class="icon is-large">
                            <i class="fa fa-meetup" aria-hidden="true"></i>
                        </span>
                    </a>
                </li>
                <li>
                    <a href="https://umbracians.slack.com/messages/C5L9KJ7C0/">
                        <span class="icon is-large">
                            <i class="fa fa-slack" aria-hidden="true"></i>
                        </span>
                    </a>
                </li>
                <li>
                    <a href="https://twitter.com/edinbuug">
                        <span class="icon is-large">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </section>
</body>
</html>
